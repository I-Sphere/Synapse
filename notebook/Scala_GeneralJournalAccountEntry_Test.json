				},
				"source": [
					"val dfSite = spark.read.sqlanalytics(\"ExemplePool.dbo.Site\").select(\n",
					"    \"id_site\",\n",
					"    \"code_site\"\n",
					")"
				],
				"execution_count": 8
			},
			{
				"cell_type": "code",
				"metadata": {
					"jupyter": {
						"source_hidden": false,
