				"source": [
					"val file_to_process = PathFile.concat(SourceFile)\n",
					"val dfSource = spark.read.json(file_to_process)\n",
					"val dfJournal = dfSource.withColumn(\"SITE\", split(col(\"LEDGERACCOUNT\"), \"-\").getItem(1))"
